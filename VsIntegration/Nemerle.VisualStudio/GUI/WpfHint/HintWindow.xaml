<c:PopupWindow x:Class="WpfHint.HintWindow" x:ClassModifier="internal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:WpfHint" FontSize="16" FontFamily="Calibri" Title="">
	<Grid x:Name="grid">
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>
		<Border 
			Background="#FFFFFFE1"
            BorderThickness="1"
            BorderBrush="Black"
			Padding="2 2 2 2"
			Grid.Row="0" >
			<Button Grid.Row="0">Copy</Button>
		</Border>
		<Border x:Name="border"
            Background="#FFFFFFE1"
            Padding="5"
            Margin="0,0,3,3"
            BorderThickness="1"
            BorderBrush="Black"
			Grid.Row="1" >
			<Border.Effect>
				<DropShadowEffect Color="Gray" ShadowDepth="2" BlurRadius="2"/>
			</Border.Effect>
			<TextBlock Text="no data" />
		</Border>


	</Grid>
</c:PopupWindow>
